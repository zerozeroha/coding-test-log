{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "off", // 사용하지 않는 변수 경고 끄기
    "no-undef": "off", // 정의되지 않은 변수 사용 가능
    "semi": ["off"], // 세미콜론 강제 안 함
    "no-var": "off", // var 사용 가능
    "prefer-const": "off", // const 권장 안 함
    "camelcase": "off" // 카멜케이스 강제 안 함 (한글 변수명도 허용)
  }
}
